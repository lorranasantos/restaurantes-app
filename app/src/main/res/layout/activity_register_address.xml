<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".RegisterAddressActivity">


    <TextView
        android:id="@+id/menu_app_name"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="qFome"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textAppearance="@style/menuTitleAppearance"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_title_register"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Cadastro de Restaurante"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/menuSubtitleAppearance"

        app:layout_constraintTop_toBottomOf="@+id/menu_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>



    <TextView
        android:id="@+id/text_subtitle_register"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Dados do Endereço"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/menuSubtitleAppearance"

        app:layout_constraintTop_toBottomOf="@+id/text_title_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_register">

        <EditText
            android:id="@+id/text_cep"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:hint="CEP"
            android:background="@drawable/custom_input"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/text_register_city"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginRight="6dp"
                android:padding="8dp"
                android:hint="Cidade"
                android:background="@drawable/custom_input"
                />

            <EditText
                android:id="@+id/text_register_state"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:hint="Estado"
                android:background="@drawable/custom_input"
                />

        </LinearLayout>

        <EditText
            android:id="@+id/text_register_street"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Logradouro"
            android:background="@drawable/custom_input"
            />

        <EditText
            android:id="@+id/text_register_neighbourhood"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            android:padding="8dp"
            android:hint="Bairro"
            android:background="@drawable/custom_input"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_gravity="center_vertical">

            <EditText
                android:id="@+id/text_register_number"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginRight="6dp"
                android:padding="8dp"
                android:hint="Número"
                android:background="@drawable/custom_input"
                />

            <EditText
                android:id="@+id/text_register_complement"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:layout_marginLeft="6dp"
                android:padding="8dp"
                android:hint="Complemento"
                android:background="@drawable/custom_input"
                />

        </LinearLayout>

        <Button
            android:id="@+id/button_register_rest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Próximo"
            android:background="@drawable/button"
            android:backgroundTint="@color/main"
           />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>