<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityRegisterRestaurant"
    android:padding="6dp"
    android:background="@color/background">

    <TextView
        android:id="@+id/menu_app_name"
        android:layout_width="wrap_content"
        android:layout_height="50sp"
        android:text="qFome"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textAppearance="@style/menuTitleAppearance"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_title_register"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Cadastro de Restaurante"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textAppearance="@style/menuSubtitleAppearance"

        app:layout_constraintTop_toBottomOf="@+id/menu_app_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_subtitle_register"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        android:text="Dados do Restaurante"
        android:textAlignment="center"
        android:layout_marginTop="6dp"
        android:textAppearance="@style/menuSubtitleAppearance"

        app:layout_constraintTop_toBottomOf="@+id/text_title_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="24dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_register">

        <EditText
            android:id="@+id/restaurant_name_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="40dp"
            android:padding="8dp"
            android:hint="Nome do restaurante"
            android:background="@drawable/custom_input"
            />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/custom_input">
            <Spinner
                android:id="@+id/rest_category_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>

        </RelativeLayout>

        <EditText
            android:id="@+id/restaurant_description_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:hint="Descrição"
            android:background="@drawable/custom_input"
            />

        <Button
            android:id="@+id/button_next_register"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:text="Próximo"
            android:background="@drawable/button"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>