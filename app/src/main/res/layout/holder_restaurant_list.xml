<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:padding="6dp"
    app:cardBackgroundColor="@color/card"
    app:cardCornerRadius="8dp"
    android:id="@+id/card_restaurant_list">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/card"
        android:padding="6dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="12dp"
            android:background="@drawable/baseline_storefront_24"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_rest_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Trattoria Luz"
                android:textAppearance="@style/menuSubtitleAppearance"
                android:textColor="@color/black"
                android:padding="8dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:paddingVertical="4dp"
                android:paddingHorizontal="8dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/search">

                <TextView
                    android:id="@+id/tv_rest_category"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="Italiana"
                    android:textColor="@color/card"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>